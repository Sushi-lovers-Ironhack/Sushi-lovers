<div id="user-cart-container">
  <div class="user-cart-title">
    <h1>Order Status</h1>
  </div>
  {{#if orderedCarts}}
    {{#each orderedCarts}}
      <div class="status-info">
        <h1>Your order to {{this.restaurantId.name}} soon will be accepted.</h1>
      </div>
    {{/each}}
  {{/if}}

  {{#if acceptedCarts}}
    {{#each acceptedCarts}}
      <div class="status-info">
        <h1>The restaurant
          {{this.restaurantId.name}}
          has accepted your order and its preparing it.</h1>
      </div>
    {{/each}}
  {{/if}}

  {{#if rejectedCarts}}
    {{#each rejectedCarts}}
      <div class="status-info">
        <h1>Sorry but the restaurant
          {{this.restaurantId.name}}
          has rejected your order.</h1>
      </div>
    {{/each}}
  {{/if}}

  {{#if sentCarts}}
    {{#each sentCarts}}
      <div class="status-finish">
        <h1>Your order from the restaurant
          {{this.restaurantId.name}}
          is on the way!</h1>
        <a href="/cart/finished/{{this._id}}" id="recived-button">recived order!</a>
      </div>
    {{/each}}
  {{/if}}

</div>

<script src="/scripts/status.js"></script>
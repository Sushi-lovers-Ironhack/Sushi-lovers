<div id="user-cart-container">
  <div class="user-cart-title">
    <h1>Your Cart</h1>
  </div>
  {{#if foundCart}}
    {{#each foundCart.productsId}}
      <div class="product-details">
        <div class="img-details">
          <img src="{{this.imageUrl}}" alt="product img" />
        </div>
        <div class="name-and-price">
          <p>{{this.name}}</p>
          <p>{{this.price}} €</p>
        </div>
        <a href="" class="trash-can-container">
          <img
            src="/images/trash-can.png"
            alt="trash can img"
            class="trash-can-logo"
          />
        </a>
      </div>
    {{/each}}
    <div class="total-price-and-checkout">
      <h2 class="total-price"> Total: {{total}} €</h2>
      <h2 class="checkout">Finish your command</h2>
    </div>
  {{else}}
    <div>
      <h1>Your cart is empty</h1>
    </div>
  {{/if}}
</div>
<div id="home-view">
    <div id="sushi-lovers-card">
        <img src="/images/sushilovers-logo.png" alt="sushi-lovers logo">
        <div id="text-menu-box">
            <h1>Sushilovers</h1>
            <h2>inserte aqui frase gancho</h2>
        </div>
    </div>

    <div id="search-bar">
        <form action="/search" method="post">
            <input type="text" name="search" placeholder="Search by dish">
            <button type="submit"><img src="/images/mag-glass.png" alt="search-logo"></button>
        </form>
    </div>

    <div class="search-title">
        <h2>Search results</h2>
    </div>
    <div class="restaurant-container">
     {{#each restaurantsDB}}
     <div class="restaurant-card">
        {{> restaurantPartial}}
     </div>
     {{/each}}
    </div>
</div>
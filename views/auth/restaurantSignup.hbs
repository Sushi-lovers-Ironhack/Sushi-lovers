<h1>Create a new restaurant account</h1>

<div id="form">
  <form action="/auth/restaurant/signup" method="POST">
 
    <label>Name</label>
      <input type="text" name="name" placeholder="Jon Doe's Place" required/>
 
    <label>Email</label>
      <input type="email" name="email" placeholder="john@doe.com" required/>
    
    <label>Password</label>
      <input type="password" name="password1" placeholder="********" required/>

    <label>Confirm password</label>
      <input type="password" name="password2" placeholder="********" required/>

    <label>Direction</label>
      <input type="text" name="direction" required/>

    <label>Phone number</label>
      <input type="text" name="phoneNumber" placeholder="987654321" required/>

    <label>Restaurant information</label>
      <input type="text" name="description" required/>

      {{#if error}}
      <p style="color: red;">{{error}}</p>
      {{/if}}
 
    <button type="submit">Create account</button>
 
  </form>
</div>